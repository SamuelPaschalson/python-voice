# Node.js Backend Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=voiceauth

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRY=24h

# Voice Processor Service
VOICE_PROCESSOR_URL=http://localhost:5001,https://python-voice.pxxl.xyz/
VOICE_PROCESSOR_PORT=5001

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/mpeg,audio/ogg

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=1200000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://python-voice.pxxl.xyz/

# Verification Settings
DEFAULT_VERIFICATION_THRESHOLD=0.75
MIN_AUDIO_DURATION=1.0
MAX_AUDIO_DURATION=10.0

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# SSL/TLS (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_SECRET=your_redis_session_secret

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@yourapp.com

# Monitoring and Analytics
SENTRY_DSN=
ANALYTICS_API_KEY=

# Storage Configuration
AUDIO_STORAGE_PATH=./uploads/audio
TEMP_STORAGE_PATH=./temp
